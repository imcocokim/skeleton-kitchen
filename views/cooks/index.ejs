<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1>All Cooks</h1>
  <% profiles.forEach(profile => { %>
    <% if (profile.avatar) { %>
      <img 
      src="<%= profile.avatar %>" 
      alt="<%= profile.name %>'s profile"
      />
      <% } else { %>
        <img 
        src="/images/user.png" 
        alt="placeholder avatar"
        >
        <% } %>
        <a href="/cooks/<%=profile._id %>"><%= profile.name %></a>
        <%= profile.location %>
        <%= profile.years %>  
  <% }) %>

</main>

<%- include('../partials/footer') %>
