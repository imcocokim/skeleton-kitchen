<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <img 
    src="<%= profile.avatar %>" 
    alt="<%= profile.name %>'s profile"
    />
    <% } else { %>
      <img 
      src="/images/user.png" 
      alt="placeholder avatar"
      >
      <% } %>
  <h1><%= profile.name %></h1>
  <% if (isSelf) {%>
    <form 
    action="/cooks/<%= profile._id %>/edit" 
    method="GET" 
    style="display: inline-block;"
    >
      <button>Edit</button>
    </form>
    <% } %>  
  <h2><%= profile.location %> </h2>
  <h2><%= profile.years %> </h2>

</main>

<%- include('../partials/footer') %>
